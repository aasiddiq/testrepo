{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.10.61.36676",
      "templateHash": "6946983346281809281"
    }
  },
  "parameters": {
    "GHESInstanceNameHostName": {
      "type": "string"
    },
    "MicrosoftAppId": {
      "type": "string"
    },
    {
      "name": "pathParameter",
      "type": "Microsoft.Common.CheckBox",
      "label": "Append path '_msteams'",
      "toolTip": "Ensures if the path _msteams needs to be checked in case of non-proxy setup",
      "constraints": {
        "required": false
      },
      "visible": true
    }
  },
  "variables": {
    "uniqueName": "[format('gh{0}', uniqueString(resourceGroup().id, deployment().name))]",
    "pathValue": "[if(equals(parameters('pathParameter'), true), '/_msteams', '')]"
  },
  "resources": [
    {
      "type": "Microsoft.BotService/botServices",
      "apiVersion": "2021-03-01",
      "name": "[format('{0}-bot', variables('uniqueName'))]",
      "location": "global",
      "kind": "azurebot",
      "sku": {
        "name": "F0"
      },
      "properties": {
        "displayName": "GHE",
        "endpoint": "[format('https://{0}{1}/teams/message', parameters('GHESInstanceNameHostName'), variables('pathValue'))]",
        "msaAppId": "[parameters('MicrosoftAppId')]",
        "msaAppType": "MultiTenant"
      }
    },
    {
      "type": "Microsoft.BotService/botServices/channels",
      "apiVersion": "2021-03-01",
      "name": "[format('{0}-bot/MsTeamsChannel', variables('uniqueName'))]",
      "location": "global",
      "properties": {
        "channelName": "MsTeamsChannel",
        "properties": {
          "acceptedTerms": true,
          "deploymentEnvironment": "commercialdeployment",
          "enableCalling": false,
          "incomingCallRoute": "graphPma",
          "isEnabled": true
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.BotService/botServices', format('{0}-bot', variables('uniqueName')))]"
      ]
    }
  ]
}
