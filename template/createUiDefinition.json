{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
      "basics": [
        {
            "name": "MicrosoftAppId",
            "type": "Microsoft.Common.TextBox",
            "label": "app id",
            "toolTip": "The app id of the bot",
            "constraints": {
              "required": true,
              "regex": "^[\\d]{1,5}$",
              "validationMessage": "Please enter a valid number between 1 and 99999"
            },
            "visible": true
        },
        {
            "name": "pathParameter",
            "type": "Microsoft.Common.CheckBox",
            "label": "Append path '_msteams'",
            "toolTip": "Ensures if the path _msteams needs to be checked in case of non-proxy setup",
            "constraints": {
              "required": false
            },
            "visible": true
          }
      ],
      "steps": [],
      "outputs": {
        "pathParameter": "[basics('pathParameter')]"
      }
    }
  }